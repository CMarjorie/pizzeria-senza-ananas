{% extends 'base.html.twig' %}

{% block title %}Pizzeria Senza Ananas{% endblock %}

{% block body %}
    <h1 class="text-center">Pizzeria Senza Ananas</h1>

    <article class="container mt-5">
        <div id="products" class="row g-0">
            {% for product in products %}
                <div class="card text-center me-3" style="width: 18rem;">
                    <img src="{{ asset('uploads/' ~ product.photo) }}" class="card-img-top" alt="{{ product.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <p class="mt-3 text-muted">Prix : {{ (product.price / 100) | format_currency('EUR', locale='fr') }} </p>
                    </div>
                    <div class="card-footer text-muted">
                        <form action="{{ path('add_cart', {slug: product.slug}) }}" method="POST">
                            <label for="quantity">Quantité :
                                <input type="number" value="{% if product.quantity %}{{ product.quantity }}{% else %}1{% endif %}" name="quantity" class="mb-2"/>
                            </label>
                            
                            <button type="submit" class="btn btn-dark">{% if product.quantity %}Modifier Quantité{% else %}Ajouter au Panier{% endif %}</button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    </article>

{% endblock %}
