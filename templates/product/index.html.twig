{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="card my-3 mx-auto" style="width: 60%;">
			<h3 class="card-header text-center">{{ product.name }}</h3>
			<div class="card-body">
				<p class="card-text text-center">{{ product.description }}</p>
			</div>
			<img src="{{ asset('uploads/' ~ product.photo) }}" class="card-img-top" alt="{{ product.name }}"/>


			<div
				class="card-body text-center">

				{# {{ form(form,{'action' : '{{ path("add_cart", {slug: product.slug}) }}' }) }} #}

				{{ form_start(form, {'action' : '{{ path("add_cart", {slug: product.slug}) }}' })}}
				{{ form_row(form.extra) }}
				{{ form_end(form) }}
			</div>

		</div>
	</div>
{% endblock %}
